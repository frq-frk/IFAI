<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".upload">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark">
        <ImageButton
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"
            android:layout_gravity="start"
            android:id="@+id/back"/>
    </LinearLayout>

     <LinearLayout
         android:layout_height="40dp"
         android:layout_width="match_parent">
    <TextView
        android:layout_height="match_parent"
        android:layout_width="300dp"
        android:hint="Username"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:id="@+id/username"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/logout"
            android:id="@+id/logout"/>
     </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="120dp"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:id="@+id/poster"
            android:focusable="auto"/>
        <EditText
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:hint="Enter Description"
            android:id="@+id/desc" />
    </LinearLayout>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="text"
            android:id="@+id/film_name"
            android:hint="Enter the film title"
            android:textSize="20sp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="20dp">
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Choose file"
        android:id="@+id/chose_file"
        android:paddingRight="15dp"/>
        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:hint="File path"
            android:padding="5dp"
            android:id="@+id/file_path"/>
    </LinearLayout>
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Submit"
                android:layout_marginLeft="150dp"
                android:id="@+id/submit"/>
            <ProgressBar android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:visibility="gone"
                android:id="@+id/loading"/>
        </LinearLayout>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Submitted films"
            android:textSize="20sp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_height="270dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/submitted"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Streaming films"
            android:textSize="20sp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_height="270dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/streaming"/>
    <TextView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:hint="About and proceddures of uploading. Rules and Regulations"
        android:padding="5dp"
        android:textSize="25sp"
        />

    </LinearLayout>
</ScrollView>